<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %><!--usersテーブルから取り出します。-->
      <li class="mb-3 d-flex">
        <img class="rounded me-2" src="<%= gravatar_url(user, { size: 64 }) %>" alt="">
        <div>
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user), class: "text-decoration-none" %></p><!--sowページのリンク-->
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %><!--ページを表示するときの決まり事-->
<% end %>